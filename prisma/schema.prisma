// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  Board      Board[]
  created_at DateTime
  updated_at DateTime
}

model Board {
  id         Int      @id @default(autoincrement())
  name       String
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    Int
  Lanes      Lanes[]
  created_at DateTime
  updated_at DateTime
}

model Lanes {
  id         Int      @id @default(autoincrement())
  name       String
  board      Board    @relation(fields: [boardId], references: [id])
  boardId    Int
  Tasks      Tasks[]
  created_at DateTime
  updated_at DateTime
}

model Tasks {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  lane        Lanes      @relation(fields: [laneId], references: [id])
  laneId      Int
  Subtasks    Subtasks[]
  created_at  DateTime
  updated_at  DateTime
}

model Subtasks {
  id          Int      @id @default(autoincrement())
  description String
  isComplete  Boolean
  parentTask  Tasks    @relation(fields: [taskId], references: [id])
  taskId      Int
  created_at  DateTime
  updated_at  DateTime
}
